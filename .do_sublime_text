#!/usr/bin/env bash

if [ -z "$bootstrap" ]; then
    echo "This file is not intended to be called directly."
    exit 1
fi

# Reference link to exclude elements from indexing: https://stackoverflow.com/a/35149924/4197938

task_start "Sublime Text: Adjust settings"
mkdir -p ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User
cp -r sublime_text/Preferences.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings
task_stop

killall "Sublime Text" &> /dev/null
